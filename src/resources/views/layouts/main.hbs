    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="/js/alert.js"></script>
    <script type="text/javascript" src="/js/home.js"></script>
    <script type="text/javascript" src="/js/formValidator.js"></script>

    <script type="text/javascript">
        Validator({
            form: '#form-login',
            formGroup: '.auth-form__group',
            messageElement: '.message-error',
            rules: [
                Validator.isRequired('#username', 'Vui lòng nhập mục này'),
                Validator.isRequired('#password', 'Vui lòng nhập mục này'),
                Validator.minLength('#password', 6, 'Vui lòng nhập trên 6 ký tự'),
            ]
        })
        Validator({
            form: '#form-register',
            formGroup: '.auth-form__group',
            messageElement: '.message-error',
            rules: [
                Validator.isRequired('#username', 'Vui lòng nhập mục này'),

                Validator.isRequired('#password', 'Vui lòng nhập mục này'),
                Validator.minLength('#password', 6, 'Vui lòng nhập trên 6 ký tự'),
                
                Validator.isRequired('#passwordConfig', 'Vui lòng nhập mục này'),
                Validator.minLength('#passwordConfig', 6, 'Vui lòng nhập trên 6 ký tự'),

                Validator.passwordConfig('#passwordConfig', 'Mật khẩu không trùng khớp', function(){
                    return document.querySelector('#password').value
                }),

            ]
        })
    </script>
   
        
